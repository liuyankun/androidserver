<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans   
                http://www.springframework.org/schema/beans/spring-beans-4.1.xsd ">

	   
	<bean id="snmpCodecFilter" class="org.apache.mina.filter.codec.ProtocolCodecFilter">
	  <constructor-arg>
	    <bean class="com.lyk.myspring.mina.factory.MyCodeFactory" />
	  </constructor-arg>
	</bean>
	
	<bean id="loggingFilter" class="org.apache.mina.filter.logging.LoggingFilter" />
	
	<!-- The filter chain. -->
	<bean id="filterChainBuilder" class="org.apache.mina.core.filterchain.DefaultIoFilterChainBuilder">
	  <property name="filters">
	    <map>
	      <entry key="loggingFilter" value-ref="loggingFilter"/>
	      <entry key="codecFilter" value-ref="snmpCodecFilter"/>
	    </map>
	  </property>
	</bean>
	<bean class="org.springframework.beans.factory.config.CustomEditorConfigurer">
	    <property name="customEditors">
	      <map>
	        <entry key="java.net.SocketAddress" value = "org.apache.mina.integration.beans.InetSocketAddressEditor">
	         <!--  <bean class="org.apache.mina.integration.beans.InetSocketAddressEditor" /> -->
	        </entry>
	      </map>
	    </property>
	</bean>
	
	<!-- The IoAcceptor which binds to port 161 -->
	<bean id="ioAcceptor" class="org.apache.mina.transport.socket.nio.NioSocketAcceptor" init-method="bind" destroy-method="unbind">
	  <property name="defaultLocalAddress" value=":161" />
	  <property name="handler" ref="trapHandler" />
	  <property name="filterChainBuilder" ref="filterChainBuilder" />
	</bean>
	
	<bean id="trapHandler" class="com.lyk.myspring.mina.handler.MyServerHandler"></bean>
	   
</beans> 